
param //can be used as uniforms
{
	float time
}

vertex
{
	buffer
	{
		.0, .0,
		1., 1.,
	}
	
	array  //aka attributes
	{
		vec2 position
	}

}

program
{

	vertex
	{
		uniform float time
		in vec2 position

		main()
		{
			gl_Position = vec4(position * sin(time), .0, 1.0);
		}
	}

	fragment
	{
		main()
		{
			gl_FragColor = vec4(1.0);
		}
	}

}



